
<div class="fullscreen">
    <div class="main-container container">
        <div class="nav navbar navbar-default">
            <a href="/"><h1 align="center">Welcome IQPoint Customers Transaction</h1></a>
        </div>
    <!-- form container -->
    <div class="form-container">
        <!-- form header -->
        <h1 class="form-header heading-color">Sign Up</h1>
        <!-- end of form header -->
        <!-- form content -->
        <form class="form-content"  action="/signup" method="POST">
            <fieldset>
                <input type="text" class="form-control" name="username" placeholder="Username" value="{{username}}" required="" autofocus=""/>
                <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}" required="">
                <input type="password" class="form-control" name="password_confirm" placeholder="Password_confirm" required=""><br><br>
                 {{#if message}}
                <p>{{message}}</p>
            {{/if}}
                <input type="submit" value="Submit" class="form-submit-control" />
            </fieldset>
        </form>
        <hr>
                <p>Or go  <form class="form-content" action="/logout" method="GET">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Log Out
                    </button>
                </form></p>
                <form class="form-content" action="/login" method="GET">
                    <button class="btn-lg btn-primary btn-block" type="submit">
                        Sign In
                    </button>
                </form>
        <!-- end of form-content -->
       
    </div>
    <!-- end of form container -->
</div>