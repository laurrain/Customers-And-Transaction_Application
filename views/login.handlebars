<body>
    <div class="fullscreen_bg">
<div class="container">
    <div class="nav navbar navbar-default navbar-fixed-top">
    <a href="/"><h1 align="center">Welcome IQPoint Customers Transaction</h1></a>
  </div>
<div class="col-sm-4 col-sm-offset-4">

    <form class="col-md-6 col-md-offset-4" action="/login" method="POST">
        <div>
            <h1><span class="fa fa-sign-in"></span> Login</h1>
            <input type="text" class="form-control" autocomplete="off" name="username" placeholder="Username" required="" autofocus=""><br>
            <input type="password" name="password" class="form-control" placeholder="Password" required=""><br>

        {{#if message}}
            <p>{{message}}
        {{/if}}
        </div>
            <button type="submit" class="btn btn-warning btn-lg">Login</button>
    </form><br>
</div>
            <hr>

                <p class="col-md-4 col-md-offset-4">Need an account?<p><form class="col-md-4 col-md-offset-4"class="form-signin" action="/signup" method="GET">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Sign Up
                    </button>
                </form><br>

</div>
</div>
</div>
</body>
