
<html>
<head>
<script>
function validateForm() {
    var x = document.forms["add_BulkTran"]["1234"].value;
    if (x == null || x == "") {
        alert("4 digit must be filled out");
        return false;
    }
}
</script>
<script type="text/javascript">
var dc= function(DC){
	var Amount; 
	if(DC === "D"){
		Amount+
	}else if(DC === "C"){
		Amount-
	}else{
		return
	}
}
</script>
</head>
<body>
	<div class="tuna"></div>
<h1>Add Customer Transaction</h1>


{{#data}}
<form class="form-content" action="/CustTran/BulkTransaction_add" name="BulkTransaction_add" onsubmit="return validateForm()" method="POST">
	Valid Number Digit: <input type="integer" name="1234" required>
	<h2>Add Transaction</h2>
	Date:    <input type="Date" name="Date" value="{{Date}}">
	Reference: <input type="text" name="Reference" value="{{Reference}}">
	Amount:  <input type="float" name="Amount" value="{{Amount}}">
	<fieldset class="radiogroup"> 
		<legend>Select Debit or Credit</legend> 
  		<ul class="radio"> 
    	<li><input type="radio" name="DC" onClick="JavaScript:dc("DC")" value="{{this.DC}}" /><label for="D">Debit</label></li> 
    	<li><input type="radio" name="DC" onClick="JavaScript:dc("DC")" value="{{this.DC}}" /><label for="C">Credit</label></li> 
  		</ul> 
	</fieldset>
	<input type="submit" value="Post Batch"><input action="action" type="submit" value="Exits" onclick="history.go(-1);"/>
</form>
{{/data}}
</div>
</body>
</html>
